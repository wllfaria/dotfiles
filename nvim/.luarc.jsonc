{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
  },
  "diagnostics": {
    "globals": ["vim"],
    "unusedLocalExclude": ["_*"],
    "disable": ["redefined-local"],
  },
  "workspace": {
    "checkThirdParty": false,
    "library": [
      "$VIMRUNTIME/lua",
      "${3rd}/luv/library",

      "$HOME/.local/share/nvim/site/pack/core/core/opt/blink.cmp/lua",
      "$HOME/.local/share/nvim/site/pack/core/core/opt/conform.nvim/lua",
      "$HOME/.local/share/nvim/site/pack/core/core/opt/oil.nvim/lua",
      "$HOME/.local/share/nvim/site/pack/core/core/opt/fzf-lua/lua",
    ],
  },
}
